<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/musicChartFragment">

    <fragment
        android:id="@+id/musicChartFragment"
        android:name="com.dmitrysimakov.musicality.ui.MusicChartFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_music_chart" >
        <action
            android:id="@+id/to_addSongFragment"
            app:destination="@id/addSongFragment" />
    </fragment>
    <fragment
        android:id="@+id/addSongFragment"
        android:name="com.dmitrysimakov.musicality.ui.AddSongFragment"
        android:label="@string/new_song"
        tools:layout="@layout/fragment_add_song"/>
</navigation>